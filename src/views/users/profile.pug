extends ../base
include ../mixins/video


block content
    div.profile__data
        if loggedInUser.avatarUrl === ""
            i.fas.fa-user.avatar-default
        else
            img(src=user.avatarUrl).avatar
        h3.name=user.name
    div.video-grid
        each video in user.videos
            +video(video)
        else
            span.empty__message No videos found